{
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "routes": [
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"], // Added OPTIONS for CORS preflight
      "rewrite": "YOUR_AZURE_APP_SERVICE_URL/api/*" // Placeholder for backend URL
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src https: 'self' YOUR_AZURE_APP_SERVICE_URL; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' YOUR_AZURE_APP_SERVICE_URL; object-src 'none';", // Adjusted CSP
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains" // Added HSTS header
  },
  "platform": {
    "apiRuntime": "dotnet:8.0" // Assuming .NET 8 backend if co-deployed, adjust if API is separate App Service
  }
}
